{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "_": false
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "no-nested-ternary": "off",
        "no-use-before-define": "off",
        "standard/computed-property-even-spacing": "off",
        "react/display-name": [0, { "ignoreTranspilerName": true }],
        "react/prop-types": [
            0,
            {
                "ignore": [],
                "customValidators": []
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}