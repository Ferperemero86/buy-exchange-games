{
    "extends": [
        "standard",
        "react",
        "prettier"
    ],
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "plugins": [
        "standard",
        "prettier"
    ],
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "no-nested-ternary": "off",
        "no-use-before-define": "off",
        "standard/computed-property-even-spacing": "off",
        "react/prop-types": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}